#!/bin/sh

BENCHMARK_TEXT="Halllo, da√ü izt einh Testung. Diisem Teschtung ist seeeehr gutt. jaja das ist jalt so ne."

mkdir -p benchmark
g++ -o benchmark/derdeutschlehrer_O0 derdeutschlehrer.cpp -D USE_ADVANCED_EDIT_DISTANCE=0
g++ -o benchmark/derdeutschlehrer_O1 derdeutschlehrer.cpp -D USE_ADVANCED_EDIT_DISTANCE=1

